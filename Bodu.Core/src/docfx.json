{
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.csproj" ]
        }
      ],
      "dest": "docs/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "docs/api/**/*.yml" ]
      },
      {
        "files": [ "docs/index.md" ] // ← use this as the main entry point
      },
      {
        "files": [ "docs/articles/*.md", "docs/articles/toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "docs/images/**" ]
      }
    ],
    "dest": "docs/_site",
    "globalMetadata": {
      "_appTitle": "Bodu.CorLib API"
    },
    "template": [ "default" ]
  }
}