{
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.csproj" ]
        }
      ],
      "dest": "obj/api"  // this is a temp folder for YAML, not HTML
    }
  ],
  "build": {
    "content": [
      {
        // YAML files are generated in obj/api and used to generate the site
        "files": [ "obj/api/**/*.yml", "obj/api/index.md" ]
      },
      {
        "files": [ "docs/articles/*.md", "docs/articles/toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "docs/images/**" ]
      }
    ],
    "dest": "docs/_site", // HTML files go directly here
    "globalMetadata": {
      "_appTitle": "Bodu API"
    },
    "template": [ "default" ]
  }
}
